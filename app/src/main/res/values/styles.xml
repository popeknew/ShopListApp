<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <!-- Standard FAB Style -->
    <style name="StandardFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@android:color/black</item>
        <item name="maxImageSize">@dimen/standard_fab_image_max_size</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="borderWidth">@dimen/zero_dp</item>
        <item name="android:layout_marginEnd">@dimen/standard_margin</item>
        <item name="android:layout_marginBottom">@dimen/standard_margin</item>
        <item name="elevation">@dimen/standard_fab_elevation</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextAppearance">@style/TopHintTextInputLayoutAppearance</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
    </style>

    <style name="TopHintTextInputLayoutAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/top_hint_text_input_layout_text_size</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
